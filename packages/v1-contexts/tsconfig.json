{
  "extends": "./tsconfig.basic.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~tests/*": ["./tests/*"],
      "~types/*": ["./types/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.vue",
    "types/**/*.ts"
  ]
}
