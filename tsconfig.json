{
  "extends": "./tsconfig.basic.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "~meta": ["./meta/index.ts"],
      "~meta/*": ["./meta/*"],
      "~tests/*": ["./tests/*"],
      "~types/*": ["./types/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "meta/**/*.ts",
    "scripts/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/shims-*.d.ts",
    "tests/**/*.ts",
    "types/**/*.ts"
  ]
}
